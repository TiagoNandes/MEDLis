<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Badge">

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:background="#FE8040"
        android:text="Fechar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="596dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="416dp"
        android:layout_height="90dp"
        android:background="#1D71B8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="Voltar ao menu"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="240dp"
        android:layout_height="226dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="151dp"
        tools:srcCompat="@drawable/circlemedicinepill" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="386dp"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        android:text="Assiduidade exemplar! Tomou a sua medicação 15 dias seguidos sem falhar um dia! Tome mais cinco vezes sem falhar para o nível 4!"
        android:textColor="#000000"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="457dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="258dp"
        android:layout_height="23dp"
        android:gravity="center_horizontal"
        android:text="Desbloqueado a 05 de Maio, 2020"
        android:textColor="#ABABAB"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="417dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="210dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal"
        android:text="Assiduidade (Nível 3)"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="386dp" />

</androidx.constraintlayout.widget.ConstraintLayout>