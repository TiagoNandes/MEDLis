        app:layout_constraintBottom_toTopOf="@+id/un_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBadge" />

    <TextView
        android:id="@+id/titleBadge"
        android:layout_width="79dp"
        android:layout_height="18dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="290dp"
        android:layout_marginRight="290dp"
        android:gravity="center_horizontal"
        android:text="Assiduidade"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badgeImage" />

</androidx.constraintlayout.widget.ConstraintLayout>